{
    "performance": {
        "history_data_points": 60,
        "max_concurrent_requests": 5,
        "max_delta_cycles": 30
    },
    "ui": {
        "animation_duration_ms": 200,
        "toast_display_duration_ms": 3000
    },
    "defaults": {
        "rpc_endpoint": "/transmission/rpc",
        "magnet_protocol_prefix": "magnet:?"
    },
    "layout": {
        "piece_map": {
            "columns": 42,
            "base_rows": 6,
            "max_rows": 12,
            "cell_size": 10,
            "cell_gap": 2
        },
        "heatmap": {
            "sample_limit_multiplier": 6,
            "zoom_levels": [1, 1.5, 2, 2.5],
            "cell_size": 6,
            "cell_gap": 3
        },
        "peer_map": {
            "drift_amplitude": 5,
            "drift_duration": {
                "min": 6,
                "max": 10
            }
        },
        "table": {
            "density": "normal",
            "font_mono": "font-mono",
            "overscan": 20,
            "legacyAutoFitPaddingPx": 48,
            "fallbackPixelTolerancePx": 2
        },
        "menu": {
            "min_width": 220
        },
        "ui": {
            "navbar": {
                "density": "normal"
            },
            "statusbar": {
                "density": "normal"
            },
            "drop_overlay": {
                "density": "normal"
            },
            "file_explorer": {
                "density": "normal"
            },
            "scale": {
                "unit": 4,
                "font_base": 13,
                "zoom": 1.05
            }
        },
        "shell": {
            "classic": { "density": "normal" },
            "immersive": { "density": "relaxed" }
        },
        "modals": {
            "add_width": 180,
            "body_max_height": 70,
            "settings_height": 200,
            "settings_min_height": 125,
            "add_settings_default_size": 40,
            "add_settings_min_size": 25,
            "add_filepanel_default_size": 60,
            "add_filepanel_min_size": 30
        },
        "details": {
            "tab_content_max_height": 360
        }
    },
    "iconography": {
        "stroke_width": 1.5,
        "stroke_width_dense": 1.2
    },
    "heartbeats": {
        "table_refresh_interval_ms": 1500,
        "detail_refresh_interval_ms": 500,
        "background_refresh_interval_ms": 5000
    },
    "interaction": {
        "dragOverlay": {
            "root": {
                "initialScale": 1.05,
                "activeScale": 1,
                "exitScale": 1.03,
                "initialBlur": 0,
                "activeBlur": 18,
                "exitBlur": 0,
                "transition": {
                    "type": "spring",
                    "stiffness": 260,
                    "damping": 34,
                    "mass": 0.8
                }
            },
            "layers": [
                {
                    "id": "outer",
                    "className": "absolute inset-0 rounded-lg border border-primary/40 bg-gradient-to-br from-primary/30 via-transparent to-transparent shadow-visual-large",
                    "initial": {
                        "scale": 0.94,
                        "opacity": 0
                    },
                    "animate": {
                        "scale": 1,
                        "opacity": 0.55
                    },
                    "exit": {
                        "opacity": 0
                    },
                    "transition": {
                        "type": "spring",
                        "stiffness": 280,
                        "damping": 32
                    }
                },
                {
                    "id": "middle",
                    "className": "absolute inset-6 rounded-md border border-primary/40",
                    "initial": {
                        "scale": 0.9,
                        "opacity": 0
                    },
                    "animate": {
                        "scale": 1,
                        "opacity": 0.4
                    },
                    "exit": {
                        "opacity": 0
                    },
                    "transition": {
                        "type": "spring",
                        "stiffness": 240,
                        "damping": 28,
                        "repeat": -1,
                        "repeatType": "reverse"
                    }
                },
                {
                    "id": "inner",
                    "className": "absolute inset-12 rounded-sm border border-primary/30 opacity-70",
                    "initial": {
                        "scale": 0.95,
                        "opacity": 0
                    },
                    "animate": {
                        "scale": 1.02,
                        "opacity": 0.35
                    },
                    "exit": {
                        "opacity": 0
                    },
                    "transition": {
                        "type": "spring",
                        "stiffness": 220,
                        "damping": 26,
                        "repeat": -1,
                        "repeatType": "reverse"
                    }
                }
            ],
            "iconPulse": {
                "initialScale": 0.9,
                "animateScale": [1, 1.08, 1],
                "transition": {
                    "type": "spring",
                    "stiffness": 260,
                    "damping": 22,
                    "repeat": -1,
                    "repeatType": "reverse"
                }
            }
        },
        "modalBloom": {
            "originScale": 0.62,
            "fallbackScale": 0.85,
            "fallbackOffsetY": 20,
            "exitScale": 0.9,
            "exitOffsetY": 25,
            "transition": {
                "type": "spring",
                "stiffness": 210,
                "damping": 32
            }
        },
        "speedChart": {
            "width": 180,
            "height": 72
        },
        "networkGraph": {
            "width": 64,
            "height": 24
        }
    },
    "shortcuts": {
        "intents": {
            "SelectAll": "action.select_all",
            "Delete": "action.delete",
            "ShowDetails": "action.show_details",
            "TogglePause": "action.toggle_pause",
            "Recheck": "action.recheck",
            "RemoveWithData": "action.remove_with_data"
        },
        "keyScope": {
            "Dashboard": "dashboard",
            "Modal": "modal",
            "Settings": "settings",
            "App": "app"
        },
        "keymap": {
            "action.select_all": ["ctrl+a", "meta+a"],
            "action.delete": ["delete", "backspace"],
            "action.show_details": ["enter", "meta+i", "ctrl+i"],
            "action.toggle_pause": ["space"],
            "action.recheck": "ctrl+r",
            "action.remove_with_data": "shift+delete"
        }
    },
    "visualizations": {
        "details": {
            "piece_map": {
                "cell_size": 10,
                "cell_gap": 2,
                "columns": 60,
                "rows": {
                    "base": 4,
                    "max": 16
                }
            },
            "peer_map": {
                "drift_amplitude": 8,
                "drift_duration": {
                    "min": 4,
                    "max": 8
                },
                "layout": {
                    "center": 90,
                    "radius": 70,
                    "base_node_size": 6,
                    "progress_scale": 12
                }
            },
            "scatter": {
                "padding": {
                    "top": 24,
                    "bottom": 20,
                    "x": 16
                },
                "radius": {
                    "normal": 4,
                    "hover": 7,
                    "hit": 20
                }
            },
            "tooltip_animation": {
                "initial": {
                    "opacity": 0,
                    "scale": 0.95
                },
                "animate": {
                    "opacity": 1,
                    "scale": 1
                },
                "exit": {
                    "opacity": 0,
                    "scale": 0.95
                },
                "transition": {
                    "duration": 0.1
                }
            },
            "availability_heatmap": {
                "shadow_blur_max": 16,
                "hover_stroke_width": 1.1,
                "hover_stroke_inset": 0.6,
                "cell_stroke_inset": 0.6,
                "use_ui_sampling_shim": true
            },
            "speed_chart": {
                "line_width": 3,
                "fill_alpha": 0.35,
                "down_stroke_token": "--heroui-success",
                "up_stroke_token": "--heroui-secondary"
            }
        }
    },
    "timers": {
        "clipboard_badge_duration_ms": 1500,
        "focus_restore_delay_ms": 500,
        "ws_reconnect": {
            "initial_delay_ms": 1000,
            "max_delay_ms": 10000
        },
        "ghost_timeout_ms": 30000,
        "table_persist_debounce_ms": 250,
        "recovery": {
            "poll_interval_ms": 4000,
            "retry_cooldown_ms": 15000,
            "modal_resolved_auto_close_delay_ms": 3000
        }
    }
}
